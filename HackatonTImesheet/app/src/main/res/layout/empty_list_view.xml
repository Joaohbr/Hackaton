<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center">

        <ImageView
            tools:src="@drawable/ic_content_paste_black_48dp"
            android:id="@+id/my_image"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:tint="@color/colorLightGray"/>

        <TextView
            android:id="@+id/my_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_image"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="@color/colorBlack54"
            tools:text="@string/description_refund_empty_view" />

</LinearLayout>